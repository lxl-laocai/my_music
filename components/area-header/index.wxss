/* components/area-header/index.wxss */
@import "../../assets/font/font.wxss";
.header{
    display: flex;
    align-items: center;
    justify-content: space-between;
}
.title{
    font-size: 36rpx;
    font-weight: 700;
}
.more{
    display: flex;
    align-items: center;
}
.more-text{
    font-size: 32rpx;
}
.icon-jiantouyou{
    font-size: 25rpx;
    margin-left: 14rpx;
}
.header .slot:empty + .defalut{
    display: flex;
    align-items: center;
}
.header .defalut{
    display: none;
    align-items: center;
    font-size: 28rpx;
    color: #777;
}